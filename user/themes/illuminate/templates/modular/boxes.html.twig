{% for box in page.content|split('<hr />') %}
	{% if loop.index is odd %}
		<div class="pure-g modular-row box-row">
			<div class="block pure-u-1-2">
				<div class="box">
					{{ box }}
				</div>
			</div>
		{% if loop.last %}
			<div class="block pure-u-1-2 right-column"></div>
		</div>
		{% endif %}
	{% elseif loop.index is even %}
			<div class="block pure-u-1-2 right-column">
				<div class="box">
					{{ box }}
				</div>
			</div>
		</div>
	{% endif %}
{% endfor %}