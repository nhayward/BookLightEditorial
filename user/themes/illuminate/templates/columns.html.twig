{% extends 'partials/base.html.twig' %}

{% block content %}
    <div class="pure-g">
        {% for column in page.content|split('<h6>Sidebar</h6>') %}
        	{% if loop.first %}
	        	<div class="block pure-u-2-3">
	            	{{ column }}
	        	</div>
	        {% elseif loop.last %}
        		<div id="sidebar" class="block size-1-3 pure-u-1-3">
        	    	{{ column }}
        		</div>
        	{% endif %}
        {% endfor %}
    </div>
{% endblock %}